<div class="container content" >
  <%= render "shared/button_action", user: current_user %>
  <div class="col-md-6 col-md-offset-2">
    <%= form_for @lesson, url: lessons_path do |f| %>
      <hr class="colorgraph">
      <%= render "shared/error_messages", object: @lesson %>
      <%= f.hidden_field :user_id, value: session[:user_id] %>
      <div class="form-group">
        <%= f.label t("lesson.category"), class: "label label-default" %>
        <%= f.select :category_id, @supports.categories, {}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label t("lesson.level"), class: "label label-default" %>
        <%= f.select :level_id, @supports.levels, {}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit t("lesson.submit"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
