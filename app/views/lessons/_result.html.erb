<ul class="list-word list-group">
  <li class="list-group-item active">
    <strong>
      <%= f.options[:child_index]+1 %>.
    </strong>
    <%= f.object.word.question %>
  </li>
  <% f.object.word.answers.each do |answer| %>
    <% if item_correct? f.object, answer %>
      <li class="list-group-item list-group-item-success">
        <%= f.radio_button :answer_id, answer.id,
          checked: f.object.answer_id == answer.id, disabled: true%>
        <%= answer.content %>
      </li>
    <% elsif item_incorrect? f.object, answer %>
      <li class="list-group-item list-group-item-danger">
        <%= f.radio_button :answer_id, answer.id,
          checked: f.object.answer_id == answer.id, disabled: true%>
        <%= answer.content %>
      </li>
    <% else %>
      <li class="list-group-item ">
        <%= f.radio_button :answer_id, answer.id,
          checked: f.object.answer_id == answer.id, disabled: f.object.lesson.finish? %>
        <%= answer.content %>
      </li>
    <% end %>
  <% end %>
</ul>
